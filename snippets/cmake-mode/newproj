# -*- mode: snippet -*-
# name: empty project
# key: npj
# --
cmake_minimum_required(VERSION 3.1.0)
project(${1:newproj}
  VERSION 0.1
  LANGUAGES C CXX)

##### Options
option(PROJ_WERROR "enable treating warning as errors" ON)
option(PROJ_SANITIZER "enable sanitizer for supported compilers" ON)
option(CMAKE_EXPORT_COMPILER_COMMANDS "generating compile commands when possible" ON)

##### settings
set(CMAKE_CXX_STANDARD 17)
set(CMAKE_MODULE_PATH "\${CMAKE_MODULE_PATH}" "\${PROJECT_SOURCE_DIR}/cmake")
set(OpenGL_GL_PREFERENCE GLVND) # for opengl on linux

# remove this if you don't want
set(CMAKE_ARCHIVE_OUTPUT_DIRECTORY "\${CMAKE_BINARY_DIR}/lib")
set(CMAKE_LIBRARY_OUTPUT_DIRECTORY "\${CMAKE_BINARY_DIR}/lib")
set(CMAKE_RUNTIME_OUTPUT_DIRECTORY "\${CMAKE_BINARY_DIR}/bin")

if(NOT CMAKE_BUILD_TYPE)
  set(CMAKE_BUILD_TYPE Debug)
endif()


if(__GNUC__ OR __clang__ OR __MINGW32__ OR __MINGW64__)   #gcc like interface
  include(${2:GCCFlags})
elseif(_MSC_VER)
  include(${3:MSVCFlags})
endif()

add_subdirectory(${4:src})
