# -*- mode: snippet -*-
# name: empty project
# key: newproj
# --
cmake_minimum_required(VERSION 3.1.0 FATAL ERROR)
project(${1:newproj}
  VERSION 0.1
  LANGUAGES C CXX)

add_definitions(-D_GNU_SOURCE)
set(CMAKE_BINARY_DIR build)
set(CMAKE_C_FLAGS "-g")
set(CMAKE_EXPORT_COMPILE_COMMANDS ON)


include_directories(include)
add_subdirectory(${2:src})

